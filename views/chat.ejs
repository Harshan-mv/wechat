<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat with <%= username %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="chat-container">
    <h2>Chat with <%= username %></h2>
    <div class="chat-box">
      <% messages.forEach(function(message) { %>
        <div class="chat-message <%= message.sender === currentUser ? 'sent' : 'received' %>">
          <p><strong><%= message.sender %>:</strong> <%= message.message %></p>
          <span><%= new Date(message.timestamp).toLocaleString() %></span>
        </div>
      <% }) %>
    </div>
    <form action="/send" method="POST">
      <input type="hidden" name="sender" value="<%= currentUser %>">
      <input type="hidden" name="receiver" value="<%= username %>">
      <textarea name="message" placeholder="Type your message" required></textarea>
      <button type="submit">Send</button>
    </form>
    <a href="/users">Back to Users</a>
  </div>
</body>
</html>
